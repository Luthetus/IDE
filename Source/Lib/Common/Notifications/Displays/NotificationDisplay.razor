<div class="ci_notification @(Notification.NotificationCssClass ?? string.Empty)"
     style="@GetCssStyleString()">
     
    <div class="ci_notification-toolbar">
        <div class="ci_notification-title ci_unselectable"
             style="@GetNotificationTitleCssStyleString()"
             title="@Notification.Title">
            @Notification.Title
        </div>

        <div class="ci_notification-control-buttons">
            <button class="ci_button ci_notification-button-entry"
            		@onclick="ChangeNotificationToDialog">
                @* IconKind.EmptyWindow *@
                <svg width="@CommonService.Options_IconSizeCssValue" height="@CommonService.Options_IconSizeCssValue" viewBox="0 0 16 16" fill="currentColor"><path fill-rule="evenodd" clip-rule="evenodd" d="M4 4h3v1H4v3H3V5H0V4h3V1h1v3zM1 14.5V9h1v5h12V7H8V6h6V4H8V3h6.5l.5.5v11l-.5.5h-13l-.5-.5z" /></svg>
            </button>
            <button class="ci_button ci_notification-button-entry"
            		@onclick="Ui_HandleShouldNoLongerRender">
                @* IconKind.Close *@
	            <svg width="@CommonService.Options_IconSizeCssValue" height="@CommonService.Options_IconSizeCssValue" viewBox="0 0 16 16" fill="currentColor"><path fill-rule="evenodd" clip-rule="evenodd" d="M7.116 8l-4.558 4.558.884.884L8 8.884l4.558 4.558.884-.884L8.884 8l4.558-4.558-.884-.884L8 7.116 3.442 2.558l-.884.884L7.116 8z" /></svg>
            </button>
        </div>
    </div>

    <div class="ci_notification-body">
        <CascadingValue Value="Notification" IsFixed="true">
            <DynamicComponent Type="Notification.ComponentType"
                              Parameters="Notification.ComponentParameterMap"/>
        </CascadingValue>
    </div>
</div>
